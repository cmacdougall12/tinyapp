<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <!-- prevent user from creating links if not logged in -->
        <%if(user) {%> 
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <%}%>
        <%if(!user) {%> 
          <a class="nav-item nav-link" href="/login">Create New URL <br><span>(Please Login First)</span></a>
          <%}%>
        <a class="nav-item nav-link" href="/register">Create Account</a>
      
      </div>
    </div>
    <div>
      <div class="navbar-nav">
          <%if(!user) {%>
          <a class="nav-item nav-link" href="/login">Login</a>
          <%}%>
          <%if(user) {%>
          <form class="form-inline" action="/logout" method="POST">
            <h9>Logged in as: <%=user['email']%></h9>
            <button type="Logout" class="btn btn-primary" style="margin: 0.5em">
              Logout
            </button>
          </form>
          <%}%>
      </div>
        
    </div>

  </nav>
</header>

